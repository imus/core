{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "准备工作": "首先全局安装pnpm: npm i -g pnpm, 然后npm install",
      "url字段配置好，可忽略这里。浏览器调试步骤": "open vue/example/*.html with live server vscode extension",
      "name": "Browser Vue3",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:5500/packages/vue/examples/composition/",
      "webRoot": "${workspaceFolder}",

    },

    {
      "编译调试": "构建调试",
      "name": "NPM VUE3",
      "stopOnEntry": true,
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Jest",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "stopOnEntry": false,
      "args": ["${fileBasename}", "--runInBand", "--detectOpenHandles"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "sourceMaps": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      }
    }
  ]
}
